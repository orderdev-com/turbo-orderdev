{
	"name": "hono-api",
	"type": "module",
	"scripts": {
		"dev": "dotenv -e ../../.env -- tsx watch src/index.ts",
		"build": "rm -rf dist && ncc build src/index.ts -o dist",
		"start": "dotenv -e ../../.env -- node dist/index.js",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:migrate:prod": "drizzle-kit migrate --config=prod.drizzle.config.ts",
		"studio": "pnpm drizzle-kit studio"
	},
	"devDependencies": {
		"@hono/node-server": "^1.11.3",
		"@hono/zod-validator": "^0.2.2",
		"@libsql/client": "^0.6.2",
		"@supabase/supabase-js": "^2.43.4",
		"@types/node": "^20.14.2",
		"@vercel/ncc": "^0.38.1",
		"better-sqlite3": "^8.4.0",
		"@types/better-sqlite3": "^7.6.4",
		"drizzle-kit": "^0.22.7",
		"drizzle-orm": "^0.31.2",
		"drizzle-zod": "^0.5.1",
		"hono": "^4.4.6",
		"jose": "^5.4.0",
		"tsx": "^4.15.5",
		"zod": "^3.23.8"
	}
}
